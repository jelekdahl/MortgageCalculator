@page "/"

<PageTitle>Just Leave Me A Loan: Home</PageTitle>
<!--Page Background-->
<div class="pageStyle h-100 d-flex justify-content-center">
    <div class="row container-xxl h-100">
        <div class="col-12 col-md-10 offset-md-1 col-xl-6 offset-xl-0 d-flex flex-column justify-content-md-center order-last order-xl-first text-center mb-3 mt-xl-4">
            <div class="title">
                <div>Just Leave Me A Loan.</div>
                <div class="fs-1">(Your Fast, Accurate Loan Calculator)</div>
            </div>
            <div class="subTitle">Simplifying Loan Calculations for Clear Financial Decisions</div>
